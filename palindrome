#include <iostream>
#include <string.h>
using namespace std;
int main(){
    //palindrome
    string str;cout<<"Enter the  string:";cin>>str;
    string rev;
    for (int i=str.length();i>=0;i--){
        rev=rev+str[i];
    }
    if (str==rev){
        cout<<"\nYes it is a palindrome."
    }
    else{
        cout<<"\nNo it is not a palindrome."
    }
    return 0;
}
