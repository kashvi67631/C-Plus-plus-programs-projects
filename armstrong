#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter a number to check if it's Armstrong: ";
    cin >> n;

    int original = n;
    int sum = 0;

    while (n > 0) {
        int rem = n % 10;
        sum += rem * rem * rem;  // cube of digit
        n = n / 10;
    }

    if (sum == original)
        cout << "Yes, it is an Armstrong number.";
    else
        cout << "No, it is not an Armstrong number.";

    return 0;
}
