#include <iostream>
#include <string.h>
using namespace std;
int main(){
    //Input a string and count vowels, consonants, digits, and spaces.
    string str;
    int vowels=0,cons=0,dig=0,space=0;
    cout<<"Enter the string";
    cin>>str;
    for (int i=0;i<str.length();i++){
        if (str[i]=='A'||str[i]=='a'||str[i]=='e'||str[i]=='i'||str[i]=='o'||str[i]=='u'||str[i]=='E'||str[i]=='I'||str[i]=='O'||str[i]=='U'){
            vowels++;
        }
        else if(isdigit(str[i])){
            dig++;
        }
        else if(str[i]==' '){
            space++;
        }
        else{
            cons++;
        }
    }
    cout<<"\nVowels= "<<vowels;
    cout<<"\nConstants= "<<cons;
    cout<<"\nDigits= "<<dig;
    cout<<"\nSpace= "<<space;
    return 0;
}
